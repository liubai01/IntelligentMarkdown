{
  "name": "intelligent-markdown",
  "displayName": "Intelligent Markdown for Lua",
  "description": "Two-way binding between Markdown documents and Lua configuration files. Edit Lua configs visually in Markdown with real-time sync.",
  "version": "0.2.2",
  "publisher": "liubai01",
  "repository": {
    "type": "git",
    "url": "https://github.com/liubai01/IntelligentMarkdown"
  },
  "homepage": "https://github.com/liubai01/IntelligentMarkdown#readme",
  "bugs": {
    "url": "https://github.com/liubai01/IntelligentMarkdown/issues"
  },
  "license": "MIT",
  "keywords": [
    "markdown",
    "lua",
    "config",
    "game development",
    "visual editor",
    "two-way binding"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:intelligentMarkdown.showVariableValue",
    "onCommand:intelligentMarkdown.refreshBindings",
    "onCommand:intelligentMarkdown.openPreview"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "intelligentMarkdown.showVariableValue",
        "title": "Show Lua Variable Value",
        "category": "Intelligent Markdown"
      },
      {
        "command": "intelligentMarkdown.refreshBindings",
        "title": "Refresh Lua Bindings",
        "category": "Intelligent Markdown"
      },
      {
        "command": "intelligentMarkdown.openPreview",
        "title": "Open Config Preview",
        "category": "Intelligent Markdown",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == markdown",
          "command": "intelligentMarkdown.openPreview",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "intelligentMarkdown.openPreview",
          "when": "resourceLangId == markdown"
        }
      ]
    },
    "languages": [
      {
        "id": "lua-config",
        "aliases": ["Lua Config"],
        "extensions": []
      }
    ],
    "configuration": {
      "title": "Intelligent Markdown",
      "properties": {
        "intelligentMarkdown.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save changes to Lua files"
        },
        "intelligentMarkdown.showInlineValues": {
          "type": "boolean",
          "default": true,
          "description": "Show inline values in the editor"
        },
        "intelligentMarkdown.autoOpenPreview": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open config preview when opening Markdown files"
        },
        "intelligentMarkdown.autoOpenPreviewPattern": {
          "type": "string",
          "default": "**/*.config.md",
          "description": "Glob pattern for files that should auto-open preview (e.g., **/*.config.md or **/config/**/*.md)"
        },
        "intelligentMarkdown.autoOpenPreviewOnlyWithLuaConfig": {
          "type": "boolean",
          "default": true,
          "description": "Only auto-open preview if Markdown file contains lua-config blocks"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "lint": "eslint src --ext ts",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "luaparse": "^0.3.1",
    "yaml": "^2.3.4"
  }
}
