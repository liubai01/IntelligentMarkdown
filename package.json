{
  "name": "intelligent-markdown",
  "displayName": "Intelligent Markdown for Lua",
  "description": "基于智能 Markdown 的 Lua 变量双向绑定框架",
  "version": "0.2.0",
  "publisher": "intelligent-markdown",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:intelligentMarkdown.showVariableValue",
    "onCommand:intelligentMarkdown.refreshBindings",
    "onCommand:intelligentMarkdown.openPreview"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "intelligentMarkdown.showVariableValue",
        "title": "显示 Lua 变量值",
        "category": "Intelligent Markdown"
      },
      {
        "command": "intelligentMarkdown.refreshBindings",
        "title": "刷新 Lua 绑定",
        "category": "Intelligent Markdown"
      },
      {
        "command": "intelligentMarkdown.openPreview",
        "title": "打开配置预览",
        "category": "Intelligent Markdown",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == markdown",
          "command": "intelligentMarkdown.openPreview",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "intelligentMarkdown.openPreview",
          "when": "resourceLangId == markdown"
        }
      ]
    },
    "languages": [
      {
        "id": "lua-config",
        "aliases": ["Lua Config"],
        "extensions": []
      }
    ],
    "configuration": {
      "title": "Intelligent Markdown",
      "properties": {
        "intelligentMarkdown.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "自动保存对 Lua 文件的修改"
        },
        "intelligentMarkdown.showInlineValues": {
          "type": "boolean",
          "default": true,
          "description": "在编辑器中显示内联值"
        },
        "intelligentMarkdown.autoOpenPreview": {
          "type": "boolean",
          "default": false,
          "description": "打开 Markdown 文件时自动显示配置预览"
        },
        "intelligentMarkdown.autoOpenPreviewPattern": {
          "type": "string",
          "default": "**/*.config.md",
          "description": "自动打开预览的文件匹配模式（glob 格式，如 **/*.config.md 或 **/config/**/*.md）"
        },
        "intelligentMarkdown.autoOpenPreviewOnlyWithLuaConfig": {
          "type": "boolean",
          "default": true,
          "description": "仅当 Markdown 文件包含 lua-config 代码块时才自动打开预览"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "lint": "eslint src --ext ts",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "luaparse": "^0.3.1",
    "yaml": "^2.3.4"
  }
}
