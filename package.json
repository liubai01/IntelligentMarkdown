{
  "name": "config-md",
  "displayName": "config.md",
  "description": "Markdown-native, plain-text config and spec workflows â€” visual editing + wizard prompt generation for local CI-style iteration.",
  "version": "0.6.16",
  "publisher": "liubai01",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/liubai01/IntelligentMarkdown"
  },
  "homepage": "https://github.com/liubai01/IntelligentMarkdown#readme",
  "bugs": {
    "url": "https://github.com/liubai01/IntelligentMarkdown/issues"
  },
  "license": "MIT",
  "keywords": [
    "markdown",
    "config",
    "lua",
    "configuration management",
    "visual editor",
    "code blocks",
    "config.md",
    "game development",
    "wizard",
    "prompt template",
    "prompt generation",
    "spec code",
    "text configuration",
    "plain text",
    "markdown workflow",
    "markdown-first",
    "local ci",
    "ai workflow",
    "mermaid",
    "diagrams"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "galleryBanner": {
    "color": "#0d2b3e",
    "theme": "dark"
  },
  "categories": [
    "Chat",
    "Testing",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:lua",
    "onCommand:intelligentMarkdown.showVariableValue",
    "onCommand:intelligentMarkdown.refreshBindings",
    "onCommand:intelligentMarkdown.openPreview",
    "onCommand:intelligentMarkdown.gotoDoc",
    "onCommand:intelligentMarkdown.openConfigManager",
    "onCommand:intelligentMarkdown.quickAccess",
    "onView:intelligentMarkdown.configManager"
  ],
  "l10n": "./l10n",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "intelligentMarkdown.showVariableValue",
        "title": "Show Lua Variable Value",
        "category": "config.md"
      },
      {
        "command": "intelligentMarkdown.refreshBindings",
        "title": "Refresh Lua Bindings",
        "category": "config.md"
      },
      {
        "command": "intelligentMarkdown.openPreview",
        "title": "Open Config Preview",
        "category": "config.md",
        "icon": "$(open-preview)"
      },
      {
        "command": "intelligentMarkdown.gotoDoc",
        "title": "Go to Doc Section",
        "category": "config.md"
      },
      {
        "command": "intelligentMarkdown.openConfigManager",
        "title": "Open Config Window Manager",
        "category": "config.md",
        "icon": "$(list-tree)"
      },
      {
        "command": "intelligentMarkdown.configManager.refresh",
        "title": "Refresh Config Window Manager",
        "category": "config.md",
        "icon": "$(refresh)"
      },
      {
        "command": "intelligentMarkdown.configManager.toggleFocus",
        "title": "Toggle Config Focus Mode",
        "category": "config.md",
        "icon": "$(eye)"
      },
      {
        "command": "intelligentMarkdown.configManager.openPreview",
        "title": "Open Config Preview From Manager",
        "category": "config.md"
      },
      {
        "command": "intelligentMarkdown.quickAccess",
        "title": "Quick Access: config.md",
        "category": "config.md",
        "icon": "$(symbol-misc)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == markdown",
          "command": "intelligentMarkdown.openPreview",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "intelligentMarkdown.openPreview",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "intelligentMarkdown.openConfigManager"
        },
        {
          "command": "intelligentMarkdown.configManager.toggleFocus"
        },
        {
          "command": "intelligentMarkdown.quickAccess"
        }
      ],
      "view/title": [
        {
          "command": "intelligentMarkdown.configManager.refresh",
          "when": "view == intelligentMarkdown.configManager",
          "group": "navigation"
        },
        {
          "command": "intelligentMarkdown.configManager.toggleFocus",
          "when": "view == intelligentMarkdown.configManager",
          "group": "navigation@1"
        }
      ],
      "menubar/view": [
        {
          "submenu": "intelligentMarkdown.menubar",
          "group": "navigation@9"
        }
      ],
      "intelligentMarkdown.menubar": [
        {
          "command": "intelligentMarkdown.openConfigManager",
          "group": "1_open"
        },
        {
          "command": "intelligentMarkdown.openPreview",
          "group": "1_open"
        },
        {
          "command": "intelligentMarkdown.configManager.toggleFocus",
          "group": "2_tools"
        },
        {
          "command": "intelligentMarkdown.configManager.refresh",
          "group": "2_tools"
        },
        {
          "command": "intelligentMarkdown.quickAccess",
          "group": "0_quick"
        }
      ]
    },
    "submenus": [
      {
        "id": "intelligentMarkdown.menubar",
        "label": "config.md"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "intelligentMarkdown.configManager",
          "name": "Config.md Window Manager"
        }
      ]
    },
    "languages": [
      {
        "id": "lua-config",
        "aliases": [
          "Lua Config"
        ],
        "extensions": []
      }
    ],
    "configuration": {
      "title": "config.md",
      "properties": {
        "intelligentMarkdown.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save changes to Lua files"
        },
        "intelligentMarkdown.showInlineValues": {
          "type": "boolean",
          "default": true,
          "description": "Show inline values in the editor"
        },
        "intelligentMarkdown.autoOpenPreview": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open config preview when opening Markdown files"
        },
        "intelligentMarkdown.autoOpenPreviewPattern": {
          "type": "string",
          "default": "**/*.config.md",
          "description": "Glob pattern for files that should auto-open preview (e.g., **/*.config.md or **/config/**/*.md)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "copy-assets": "node -e \"const fs=require('fs');const p=require('path');fs.mkdirSync('media',{recursive:true});fs.copyFileSync(p.join('node_modules','tabulator-tables','dist','css','tabulator_simple.min.css'),p.join('media','tabulator.css'));\"",
    "compile": "npm run copy-assets && webpack --mode production",
    "watch": "npm run copy-assets && webpack --mode development --watch",
    "lint": "eslint src --ext ts",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.10.0",
    "@types/tabulator-tables": "^6.3.1",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@codemirror/lang-cpp": "^6.0.3",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-go": "^6.0.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-java": "^6.0.2",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-rust": "^6.0.2",
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/legacy-modes": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "codemirror": "^6.0.2",
    "exceljs": "^4.4.0",
    "highlight.js": "^11.11.1",
    "jsonc-parser": "^3.3.1",
    "luaparse": "^0.3.1",
    "markdown-it": "^14.1.1",
    "mermaid": "^11.12.2",
    "tabulator-tables": "^6.3.1",
    "xlsx": "^0.18.5",
    "yaml": "^2.3.4"
  }
}
