{
  "name": "config-md",
  "displayName": "config.md",
  "description": "Manage configuration through Markdown â€” visual config editor with embedded code blocks. Currently focused on Lua.",
  "version": "0.4.0",
  "publisher": "liubai01",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/liubai01/IntelligentMarkdown"
  },
  "homepage": "https://github.com/liubai01/IntelligentMarkdown#readme",
  "bugs": {
    "url": "https://github.com/liubai01/IntelligentMarkdown/issues"
  },
  "license": "MIT",
  "keywords": [
    "markdown",
    "config",
    "lua",
    "configuration management",
    "visual editor",
    "code blocks",
    "config.md",
    "game development"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "galleryBanner": {
    "color": "#0d2b3e",
    "theme": "dark"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:intelligentMarkdown.showVariableValue",
    "onCommand:intelligentMarkdown.refreshBindings",
    "onCommand:intelligentMarkdown.openPreview"
  ],
  "l10n": "./l10n",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "intelligentMarkdown.showVariableValue",
        "title": "Show Lua Variable Value",
        "category": "config.md"
      },
      {
        "command": "intelligentMarkdown.refreshBindings",
        "title": "Refresh Lua Bindings",
        "category": "config.md"
      },
      {
        "command": "intelligentMarkdown.openPreview",
        "title": "Open Config Preview",
        "category": "config.md",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == markdown",
          "command": "intelligentMarkdown.openPreview",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "intelligentMarkdown.openPreview",
          "when": "resourceLangId == markdown"
        }
      ]
    },
    "languages": [
      {
        "id": "lua-config",
        "aliases": [
          "Lua Config"
        ],
        "extensions": []
      }
    ],
    "configuration": {
      "title": "config.md",
      "properties": {
        "intelligentMarkdown.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save changes to Lua files"
        },
        "intelligentMarkdown.showInlineValues": {
          "type": "boolean",
          "default": true,
          "description": "Show inline values in the editor"
        },
        "intelligentMarkdown.autoOpenPreview": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open config preview when opening Markdown files"
        },
        "intelligentMarkdown.autoOpenPreviewPattern": {
          "type": "string",
          "default": "**/*.config.md",
          "description": "Glob pattern for files that should auto-open preview (e.g., **/*.config.md or **/config/**/*.md)"
        },
        "intelligentMarkdown.autoOpenPreviewOnlyWithLuaConfig": {
          "type": "boolean",
          "default": true,
          "description": "Only auto-open preview if Markdown file contains lua-config blocks"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "lint": "eslint src --ext ts",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "luaparse": "^0.3.1",
    "yaml": "^2.3.4"
  }
}
